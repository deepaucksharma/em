---
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import SearchDialog from '../components/islands/SearchDialog';
import { url } from '../lib/url';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Engineering Leadership Matrix v6 â€” A comprehensive capability model for engineering managers and directors at Big Tech companies.' } = Astro.props;
const pageTitle = title === 'Home' ? 'Engineering Leadership Matrix' : `${title} | Engineering Leadership Matrix`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content={description} />
  <title>{pageTitle}</title>
  <link rel="icon" type="image/svg+xml" href={url("/favicon.svg")} />
  <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site).href} />
  <meta property="og:title" content={pageTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={new URL(Astro.url.pathname, Astro.site).href} />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
  <script is:inline>
    if (localStorage.getItem('theme') === 'dark') {
      document.documentElement.classList.add('dark');
    }
  </script>
</head>
<body class="min-h-screen flex flex-col bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100">
  <Header />
  <main class="flex-1">
    <slot />
  </main>
  <Footer />
  <SearchDialog client:load />
</body>
</html>
