  // Category filters
  const catButtons = document.querySelectorAll('.cat-filter-btn');
  catButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      activeCategory = (btn as HTMLElement).dataset.category || 'all';
      catButtons.forEach(b => {
        b.classList.remove('active', 'bg-gray-200', 'text-gray-700', 'dark:bg-gray-700', 'dark:text-gray-300');
        b.classList.add('text-gray-500', 'hover:bg-gray-100', 'dark:text-gray-400', 'dark:hover:bg-gray-800');
      });
      btn.classList.add('active', 'bg-gray-200', 'text-gray-700', 'dark:bg-gray-700', 'dark:text-gray-300');
      btn.classList.remove('text-gray-500', 'hover:bg-gray-100', 'dark:text-gray-400', 'dark:hover:bg-gray-800');
      applyFilters();
    });
  });

  // View toggle
  const gridBtn = document.getElementById('view-grid');
  const tableBtn = document.getElementById('view-table');
  const gridView = document.getElementById('metrics-container');
  const tableView = document.getElementById('metrics-table');

  gridBtn?.addEventListener('click', () => {
    gridView?.classList.remove('hidden');
    tableView?.classList.add('hidden');
    gridBtn.classList.add('bg-blue-50', 'text-blue-700', 'dark:bg-blue-900/30', 'dark:text-blue-300');
    gridBtn.classList.remove('text-gray-400', 'hover:bg-gray-100', 'dark:hover:bg-gray-800');
    tableBtn?.classList.remove('bg-blue-50', 'text-blue-700', 'dark:bg-blue-900/30', 'dark:text-blue-300');
    tableBtn?.classList.add('text-gray-400', 'hover:bg-gray-100', 'dark:hover:bg-gray-800');
  });

  tableBtn?.addEventListener('click', () => {
    gridView?.classList.add('hidden');
    tableView?.classList.remove('hidden');
    tableBtn.classList.add('bg-blue-50', 'text-blue-700', 'dark:bg-blue-900/30', 'dark:text-blue-300');
    tableBtn.classList.remove('text-gray-400', 'hover:bg-gray-100', 'dark:hover:bg-gray-800');
    gridBtn?.classList.remove('bg-blue-50', 'text-blue-700', 'dark:bg-blue-900/30', 'dark:text-blue-300');
    gridBtn?.classList.add('text-gray-400', 'hover:bg-gray-100', 'dark:hover:bg-gray-800');
  });
