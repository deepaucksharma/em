---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumb from '../components/ui/Breadcrumb.astro';
import Badge from '../components/ui/Badge.astro';
import { capabilities, getCapability, getMetricsForCapability, metrics } from '../lib/data';
import { getDomainColor } from '../lib/utils';
import { url } from '../lib/url';
import measurementData from '../data/measurement-guidance.json';

const measurements = measurementData as {
  capabilityId: string;
  leadingIndicators: string[];
  laggingIndicators: string[];
  measurementAntiPatterns: string[];
  suggestedCadence: string;
  dataSourceExamples: string[];
}[];

const measurementsWithCap = measurements.map(m => ({
  ...m,
  capability: getCapability(m.capabilityId),
  keyMetrics: getMetricsForCapability(m.capabilityId)
    .filter(met => met.tier !== 'inferior' && met.tier !== 'activity')
    .slice(0, 6),
})).filter(m => m.capability);
---

<BaseLayout title="Measurement Guide" description="Leading and lagging indicators for measuring engineering leadership capabilities.">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <Breadcrumb items={[{ label: 'Measurement Guide' }]} />

    <!-- Cross-link banner -->
    <div class="mb-6 rounded-xl border border-amber-200 dark:border-amber-800 bg-amber-50 dark:bg-amber-950/20 p-4 flex items-center gap-3">
      <svg class="w-5 h-5 text-amber-500 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z" />
      </svg>
      <p class="text-sm text-amber-800 dark:text-amber-300">
        For the complete metrics framework with {metrics.length} specific metrics, diagnostic chains, and dashboard blueprints, see the
        <a href={url("/metrics/")} class="font-semibold underline hover:text-amber-600 dark:hover:text-amber-200">Metrics Reference &rarr;</a>
      </p>
    </div>

    <div class="mb-8">
      <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white tracking-tight mb-3">
        Measurement Guide
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        How to measure progress across each capability. Includes leading indicators (predictive), lagging indicators (outcome), and common measurement anti-patterns.
      </p>
    </div>

    <div class="space-y-8">
      {measurementsWithCap.map(({ capability: cap, ...m }) => cap && (
        <div class="card">
          <div class="flex items-center gap-3 mb-4">
            <Badge text={cap.domain} variant="domain" domain={cap.domain} />
            <h2 class="text-lg font-bold text-gray-900 dark:text-white">
              <a href={url(`/capabilities/${cap.slug}/`)} class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                {cap.id}: {cap.name}
              </a>
            </h2>
            <span class="ml-auto text-xs text-gray-500 dark:text-gray-400 badge bg-gray-100 dark:bg-gray-700">{m.suggestedCadence}</span>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
            <div class="bg-green-50 dark:bg-green-950/20 rounded-lg p-4">
              <h3 class="text-sm font-semibold text-green-700 dark:text-green-300 mb-2">Leading Indicators</h3>
              <ul class="space-y-1.5">
                {m.leadingIndicators.map(ind => (
                  <li class="text-sm text-green-600 dark:text-green-400 flex items-start gap-2">
                    <svg class="w-4 h-4 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                    </svg>
                    {ind}
                  </li>
                ))}
              </ul>
            </div>

            <div class="bg-blue-50 dark:bg-blue-950/20 rounded-lg p-4">
              <h3 class="text-sm font-semibold text-blue-700 dark:text-blue-300 mb-2">Lagging Indicators</h3>
              <ul class="space-y-1.5">
                {m.laggingIndicators.map(ind => (
                  <li class="text-sm text-blue-600 dark:text-blue-400 flex items-start gap-2">
                    <svg class="w-4 h-4 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    {ind}
                  </li>
                ))}
              </ul>
            </div>

            <div class="bg-red-50 dark:bg-red-950/20 rounded-lg p-4">
              <h3 class="text-sm font-semibold text-red-700 dark:text-red-300 mb-2">Measurement Anti-Patterns</h3>
              <ul class="space-y-1.5">
                {m.measurementAntiPatterns.map(ap => (
                  <li class="text-sm text-red-600 dark:text-red-400 flex items-start gap-2">
                    <svg class="w-4 h-4 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
                    </svg>
                    {ap}
                  </li>
                ))}
              </ul>
            </div>
          </div>

          <div class="mb-4">
            <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 mb-2 uppercase tracking-wider">Data Sources</h3>
            <div class="flex flex-wrap gap-1.5">
              {m.dataSourceExamples.map(ds => (
                <span class="badge bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400">{ds}</span>
              ))}
            </div>
          </div>

          {m.keyMetrics.length > 0 && (
            <div class="pt-4 border-t border-gray-100 dark:border-gray-700">
              <h3 class="text-xs font-semibold text-gray-500 dark:text-gray-400 mb-2 uppercase tracking-wider">Key Metrics</h3>
              <div class="flex flex-wrap gap-1.5">
                {m.keyMetrics.map(met => (
                  <a
                    href={url(`/metrics/${met.slug}/`)}
                    class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-lg text-xs font-medium bg-blue-50 text-blue-700 dark:bg-blue-950/30 dark:text-blue-300 hover:bg-blue-100 dark:hover:bg-blue-950/50 transition-colors border border-blue-100 dark:border-blue-900"
                  >
                    <span class="font-mono text-[10px] text-blue-400 dark:text-blue-500">{met.id}</span>
                    {met.name}
                  </a>
                ))}
              </div>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</BaseLayout>
