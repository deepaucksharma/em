---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Breadcrumb from '../../components/ui/Breadcrumb.astro';
import SelfAssessmentTool from '../../components/islands/SelfAssessmentTool';
import { url } from '../../lib/url';
---

<BaseLayout title="Self-Assessment Tool" description="Interactive self-assessment tool for engineering leadership capabilities.">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <Breadcrumb items={[
      { label: 'Self-Assessment', href: url('/self-assessment/') },
      { label: 'Interactive Tool' },
    ]} />

    <div class="mb-8">
      <h1 class="text-3xl font-extrabold text-gray-900 dark:text-white tracking-tight mb-3">
        Self-Assessment Tool
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">
        Rate yourself 1-5 on each capability. Click "Show guide" for behavioral anchors. Results persist in your browser.
      </p>
    </div>

    <SelfAssessmentTool client:load />
  </div>
</BaseLayout>
