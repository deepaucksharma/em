---
const navItems = [
  { label: 'Home', href: '/' },
  { label: 'Capabilities', href: '/capabilities/' },
  { label: 'Anti-Patterns', href: '/anti-patterns/' },
  { label: 'Playbooks', href: '/playbooks/' },
  { label: 'Rubric', href: '/rubric/' },
];

const developItems = [
  { label: 'Learning Pathways', href: '/learning-pathways/' },
  { label: 'Self-Assessment', href: '/self-assessment/' },
  { label: 'Career Progression', href: '/career-progression/' },
];

const resourceItems = [
  { label: 'Interview Questions', href: '/interview-questions/' },
  { label: 'Org Maturity Model', href: '/org-maturity/' },
  { label: 'Measurement Guide', href: '/measurement-guide/' },
  { label: 'Calibration Signals', href: '/calibration/' },
  { label: 'Evidence Guide', href: '/evidence-guide/' },
];

const metricsItems = [
  { label: 'Getting Started', href: '/metrics/getting-started/' },
  { label: 'Metrics Reference', href: '/metrics/' },
  { label: 'Quick Reference', href: '/metrics/quick-reference/' },
  { label: 'Dashboard Blueprints', href: '/metrics/dashboards/' },
  { label: 'Diagnostic Chains', href: '/metrics/diagnostics/' },
  { label: 'Metrics by Archetype', href: '/metrics/by-archetype/' },
  { label: 'Organizational Archetypes', href: '/metrics/archetypes/' },
  { label: 'Mandatory Pairs', href: '/metrics/pairs/' },
  { label: 'Calibration Language', href: '/metrics/language-bank/' },
  { label: 'Implementation Roadmap', href: '/metrics/roadmap/' },
  { label: 'Tech Debt Economics', href: '/metrics/economics/' },
];

const currentPath = Astro.url.pathname;

function isActive(href: string) {
  return currentPath === href || (href !== '/' && currentPath.startsWith(href));
}

function isDropdownActive(items: { href: string }[]) {
  return items.some(item => isActive(item.href));
}
---

<header class="sticky top-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 font-bold text-lg">
        <span class="text-blue-600 dark:text-blue-400">EM</span>
        <span class="hidden sm:inline text-gray-900 dark:text-white">Leadership Matrix</span>
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex items-center gap-1">
        {navItems.map(item => (
          <a
            href={item.href}
            class:list={[
              'px-3 py-2 rounded-lg text-sm font-medium transition-colors',
              isActive(item.href)
                ? 'bg-blue-50 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300'
                : 'text-gray-600 hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-800',
            ]}
          >
            {item.label}
          </a>
        ))}

        <!-- Develop dropdown -->
        <div class="relative" data-dropdown>
          <button
            class:list={[
              'px-3 py-2 rounded-lg text-sm font-medium transition-colors flex items-center gap-1',
              isDropdownActive(developItems)
                ? 'bg-blue-50 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300'
                : 'text-gray-600 hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-800',
            ]}
            data-dropdown-trigger
          >
            Develop
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="hidden absolute top-full left-0 mt-1 w-48 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 py-1 z-50" data-dropdown-menu>
            {developItems.map(item => (
              <a
                href={item.href}
                class:list={[
                  'block px-4 py-2 text-sm transition-colors',
                  isActive(item.href)
                    ? 'bg-blue-50 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300'
                    : 'text-gray-600 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700',
                ]}
              >
                {item.label}
              </a>
            ))}
          </div>
        </div>

        <!-- Resources dropdown -->
        <div class="relative" data-dropdown>
          <button
            class:list={[
              'px-3 py-2 rounded-lg text-sm font-medium transition-colors flex items-center gap-1',
              isDropdownActive(resourceItems)
                ? 'bg-blue-50 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300'
                : 'text-gray-600 hover:text-gray-900 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-800',
            ]}
            data-dropdown-trigger
          >
            Resources
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <div class="hidden absolute top-full left-0 mt-1 w-52 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 py-1 z-50" data-dropdown-menu>
            {resourceItems.map(item => (
              <a
                href={item.href}
                class:list={[
                  'block px-4 py-2 text-sm transition-colors',
                  isActive(item.href)
                    ? 'bg-blue-50 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300'
                    : 'text-gray-600 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700',
                ]}
              >
                {item.label}
              </a>
            ))}
          </div>
        </div>

        <!-- Metrics dropdown -->
        <div class="relative" data-dropdown>
          <button
            class:list={[
              'px-3 py-2 rounded-lg text-sm font-medium transition-colors flex items-center gap-1',
              isDropdownActive(metricsItems)
