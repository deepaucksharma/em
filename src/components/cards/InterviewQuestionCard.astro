---
import Badge from '../ui/Badge.astro';

interface Props {
  question: {
    id: string;
    capabilityId: string;
    question: string;
    level: string;
    questionType: string;
    followUps: string[];
    lookFor: string[];
    redFlags: string[];
  };
  capabilityName?: string;
}

const { question, capabilityName } = Astro.props;
---

<details class="card group open:ring-2 open:ring-blue-200 dark:open:ring-blue-800">
  <summary class="cursor-pointer list-none">
    <div class="flex items-start gap-3">
      <div class="flex-1 min-w-0">
        <div class="flex items-center gap-2 mb-1 flex-wrap">
          <span class="font-mono text-xs text-gray-400 dark:text-gray-500">{question.id}</span>
          <span class:list={[
            'badge',
            question.level === 'director' ? 'bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-300' : 'bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300'
          ]}>
            {question.level === 'director' ? 'Director' : 'EM'}
          </span>
          <span class="badge bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400">{question.questionType}</span>
          {capabilityName && (
            <span class="text-xs text-gray-500 dark:text-gray-400">{question.capabilityId}: {capabilityName}</span>
          )}
        </div>
        <h4 class="text-base font-medium text-gray-900 dark:text-white">
          {question.question}
        </h4>
      </div>
      <svg class="w-5 h-5 text-gray-400 shrink-0 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
    </div>
  </summary>

  <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700 space-y-4">
    {question.followUps.length > 0 && (
      <div>
        <h5 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Follow-Up Questions</h5>
        <ul class="space-y-1">
          {question.followUps.map(fu => (
            <li class="text-sm text-gray-600 dark:text-gray-400 flex items-start gap-2">
              <span class="text-blue-400 mt-1 shrink-0">&#8227;</span>
              {fu}
            </li>
          ))}
        </ul>
      </div>
    )}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {question.lookFor.length > 0 && (
        <div class="bg-green-50 dark:bg-green-950/20 rounded-lg p-3">
          <h5 class="text-sm font-semibold text-green-700 dark:text-green-300 mb-2">Look For</h5>
          <ul class="space-y-1">
            {question.lookFor.map(item => (
              <li class="text-sm text-green-600 dark:text-green-400 flex items-start gap-2">
                <svg class="w-4 h-4 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                {item}
              </li>
            ))}
          </ul>
        </div>
      )}

      {question.redFlags.length > 0 && (
        <div class="bg-red-50 dark:bg-red-950/20 rounded-lg p-3">
          <h5 class="text-sm font-semibold text-red-700 dark:text-red-300 mb-2">Red Flags</h5>
          <ul class="space-y-1">
            {question.redFlags.map(item => (
              <li class="text-sm text-red-600 dark:text-red-400 flex items-start gap-2">
                <svg class="w-4 h-4 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                {item}
              </li>
            ))}
          </ul>
        </div>
      )}
    </div>
  </div>
</details>
