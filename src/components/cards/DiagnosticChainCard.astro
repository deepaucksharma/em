---
import type { DiagnosticChain } from '../../lib/data';
import { getMetric } from '../../lib/data';
import { url } from '../../lib/url';

interface Props {
  chain: DiagnosticChain;
}

const { chain } = Astro.props;
const triggerMetric = getMetric(chain.triggerMetricId);
---

<details class="rounded-xl border border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 overflow-hidden group">
  <summary class="flex items-center gap-3 p-5 cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 select-none">
    <svg class="w-5 h-5 text-gray-400 dark:text-gray-500 transition-transform group-open:rotate-90 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
    </svg>
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2 flex-wrap">
        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-bold bg-gray-200 text-gray-700 dark:bg-gray-600 dark:text-gray-200 font-mono">
          {chain.id}
        </span>
        <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-300">
          <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
          Trigger
        </span>
        <span class="font-semibold text-gray-900 dark:text-white">{chain.triggerCondition}</span>
      </div>
      <div class="text-sm text-gray-500 dark:text-gray-400 mt-1">
        {triggerMetric ? (
          <a href={url(`/metrics/${triggerMetric.slug}/`)} class="text-blue-600 dark:text-blue-400 hover:underline">{triggerMetric.name}</a>
        ) : chain.triggerMetricId} &middot; {chain.steps.length} diagnostic steps
      </div>
    </div>
  </summary>

  <div class="px-5 pb-5 border-t border-gray-100 dark:border-gray-700/50 pt-4">
    <!-- Steps -->
    <div class="relative pl-8 space-y-4">
      <!-- Vertical line -->
      <div class="absolute left-3.5 top-1 bottom-1 w-px bg-gray-200 dark:bg-gray-700"></div>
      {chain.steps.map(step => {
        const stepMetric = step.checkMetricId ? getMetric(step.checkMetricId) : null;
        const alsoMetrics = (step.alsoCheckMetricIds || []).map(id => getMetric(id)).filter(Boolean);
        return (
          <div class="relative">
            <!-- Numbered circle -->
            <div class="absolute -left-8 top-0.5 w-7 h-7 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center text-xs font-bold text-blue-700 dark:text-blue-300 border-2 border-white dark:border-gray-800" aria-label={`Step ${step.order}`}>
              {step.order}
            </div>
            <div>
              <div class="flex items-center gap-2 flex-wrap">
                <span class="text-sm font-medium text-gray-900 dark:text-white">Check: {step.label}</span>
                {stepMetric && (
                  <a href={url(`/metrics/${stepMetric.slug}/`)} class="text-xs text-blue-600 dark:text-blue-400 hover:underline">{stepMetric.id}</a>
                )}
                {alsoMetrics.map(m => m && (
                  <a href={url(`/metrics/${m.slug}/`)} class="text-xs text-blue-600 dark:text-blue-400 hover:underline">{m.id}</a>
                ))}
              </div>
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-0.5">{step.reason}</p>
            </div>
          </div>
        );
      })}
    </div>

    <!-- Director Question -->
    <div class="mt-5 rounded-lg bg-purple-50 dark:bg-purple-950/20 border border-purple-200 dark:border-purple-800 p-4">
      <div class="text-xs font-semibold text-purple-600 dark:text-purple-400 mb-1">Director Question</div>
      <p class="text-sm text-purple-800 dark:text-purple-300">{chain.directorQuestion}</p>
    </div>
  </div>
</details>
