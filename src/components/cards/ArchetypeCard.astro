---
import type { Archetype } from '../../lib/data';
import { getMetric } from '../../lib/data';
import { getSeverityColors } from '../../lib/metrics-colors';

interface Props {
  archetype: Archetype;
}

const { archetype } = Astro.props;

const colors = getSeverityColors(archetype.id);
const diagnosticMetrics = archetype.diagnosticMetricIds.map(id => getMetric(id)).filter(Boolean);
---

<div class:list={['rounded-xl border bg-white dark:bg-gray-800 overflow-hidden', colors.bg]}>
  <div class:list={['h-1.5', colors.bar]} role="presentation" aria-label={`Severity: ${archetype.name}`}></div>
  <div class="p-6">
    <div class="flex items-center gap-3 mb-4">
      <span class="text-sm font-mono font-bold text-gray-400 dark:text-gray-500">{archetype.id}</span>
      <h3 class="text-lg font-bold text-gray-900 dark:text-white">{archetype.name}</h3>
    </div>

    <div class="space-y-4">
      <div>
        <h4 class="text-xs font-semibold uppercase tracking-wider text-gray-500 dark:text-gray-400 mb-1">Signature Pattern</h4>
        <p class="text-sm text-gray-700 dark:text-gray-300">{archetype.signaturePattern}</p>
      </div>

      <div>
        <h4 class="text-xs font-semibold uppercase tracking-wider text-gray-500 dark:text-gray-400 mb-1">Metrics Profile</h4>
        <p class="text-sm text-gray-700 dark:text-gray-300">{archetype.metricsProfile}</p>
      </div>

      <div>
        <h4 class="text-xs font-semibold uppercase tracking-wider text-gray-500 dark:text-gray-400 mb-1">First Priority</h4>
        <p class="text-sm text-gray-700 dark:text-gray-300">{archetype.firstPriority}</p>
      </div>

      {archetype.quantifiedThresholds && Object.keys(archetype.quantifiedThresholds).length > 0 && (
        <div>
          <h4 class="text-xs font-semibold uppercase tracking-wider text-gray-500 dark:text-gray-400 mb-2">Diagnostic Thresholds</h4>
          <div class="flex flex-wrap gap-1.5">
            {Object.entries(archetype.quantifiedThresholds).map(([key, value]) => (
              <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-md bg-gray-100 dark:bg-gray-700 text-xs">
                <span class="text-gray-500 dark:text-gray-400">{key.replace(/([A-Z])/g, ' $1').trim()}:</span>
                <span class="font-medium text-gray-800 dark:text-gray-200">{value}</span>
              </span>
            ))}
          </div>
        </div>
      )}

      <div class="rounded-lg bg-amber-50 dark:bg-amber-950/20 border border-amber-200 dark:border-amber-800 p-3">
        <h4 class="text-xs font-semibold text-amber-700 dark:text-amber-400 mb-1">Anti-Pattern If Ignored</h4>
        <p class="text-sm text-amber-800 dark:text-amber-300">{archetype.antiPatternIfIgnored}</p>
      </div>

      {diagnosticMetrics.length > 0 && (
        <div>
          <h4 class="text-xs font-semibold uppercase tracking-wider text-gray-500 dark:text-gray-400 mb-2">Diagnostic Metrics</h4>
          <div class="flex flex-wrap gap-1.5">
            {diagnosticMetrics.map(m => m && (
              <a
                href={`/metrics/${m.slug}/`}
                class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-700 hover:bg-blue-100 hover:text-blue-700 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-blue-900/30 dark:hover:text-blue-300 transition-colors"
              >
                <span class="font-mono">{m.id}</span>
                <span class="hidden sm:inline">{m.name}</span>
              </a>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>
</div>
